{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1 style="text-align: center">Category</h1>

    <div class="container">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

        <a class="btn mb-1 btn-secondary" href="{{ path('category_index') }}">Retour a la liste</a>

        <a class="btn mb-1 btn-primary" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>


    {{ include('category/_delete_form.html.twig') }}

    </div>
{% endblock %}
