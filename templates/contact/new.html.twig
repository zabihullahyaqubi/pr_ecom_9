{% extends 'base.html.twig' %}

{% block title %}New Contact{% endblock %}

{% block body %}
    <form method="post">

        <section id="contact">
            <div class="container wow fadeInUp">
                <div class="section-header">
                    <h3 class="section-title" style="text-align: center">Contact</h3></div>
            </div>


            <div class="container fadeInUp mt-5">


                <div class="row">

                    <div class="col-lg-4 col-md-4 d-md-block d-flex align-items-center flex-column">

                        <div class="info">
                            <div>
                                <i class="fa fa-map-marker"></i>
                                <p>97 BD Maurice berteaux Sannois </p>
                            </div>

                            <div>
                                <i class="fa fa-envelope"></i>
                                <p>Maboutique@gmail.com</p>
                            </div>

                            <div>
                                <i class="fa fa-phone"></i>
                                <p>060 12 34 890</p>
                            </div>
                        </div>

                        <div class="social-links">
                            <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
                            <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
                            <a href="#" class="instagram"><i class="fa fa-instagram"></i></a>
                            <a href="#" class="linkedin"><i class="fa fa-linkedin"></i></a>
                        </div>

                    </div>

                    <div class="col-lg-8 col-md-8">
                        <div class="form">
                            <div id="sendmessage">Votre message a été envoyé. Merci!</div>
                            <div id="errormessage"></div>
                            <form action="" method="post" role="form" class="contactForm">
                                <div class="form-group">
                                    <input type="text" name="name" class="form-control" id="name" placeholder="Nom"
                                           data-rule="minlen:4" data-msg="Please enter at least 4 chars"/>
                                    <div class="validation"></div>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" name="email" id="email" placeholder="Mail"
                                           data-rule="email" data-msg="Please enter a valid email"/>
                                    <div class="validation"></div>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="subject" id="subject"
                                           placeholder="Objet"
                                           data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject"/>
                                    <div class="validation"></div>
                                </div>
                                <div class="form-group">
                            <textarea class="form-control" name="message" rows="5" data-rule="required"
                                      data-msg="Please write something for us" placeholder="Message"></textarea>
                                    <div class="validation"></div>
                                </div>
                                <div class="text-center mt-3">
                                    <button type="submit">Envoyer</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>

            </div>
        </section>
    </form>
    {#    {{ include('contact/_form.html.twig') }}#}

{% endblock %}
